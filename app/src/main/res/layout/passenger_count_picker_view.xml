<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/color_blue"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/adult_passenger_increment_button"
            style="@style/PassengerCounterButton"
            app:srcCompat="@drawable/ic_plus_10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adult_counter_count"
                    android:textAppearance="@style/PassengerCounterValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"/>

                <ImageView
                    android:id="@+id/adult_count_icon"
                    style="@style/PassengerCounterIcon"
                    app:srcCompat="@drawable/ic_passenger_adult"/>
            </LinearLayout>

            <TextView
                android:id="@+id/adult_counter_label"
                android:textAppearance="@style/PassengerCounterLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Взрослый"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/adult_passenger_decrement_button"
            style="@style/PassengerCounterButton"
            app:srcCompat="@drawable/ic_minus_10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/color_blue"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kid_passenger_increment_button"
            style="@style/PassengerCounterButton"
            app:srcCompat="@drawable/ic_plus_10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kid_counter_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAppearance="@style/PassengerCounterValue"/>

                <ImageView
                    android:id="@+id/kid_count_image"
                    style="@style/PassengerCounterIcon"
                    app:srcCompat="@drawable/ic_passenger_kid"/>
            </LinearLayout>

            <TextView
                android:id="@+id/kid_counter_label"
                android:textAppearance="@style/PassengerCounterLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2-12 лет"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/kid_passenger_decrement_button"
            style="@style/PassengerCounterButton"
            app:srcCompat="@drawable/ic_minus_10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/color_blue"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/baby_passenger_increment_button"
            style="@style/PassengerCounterButton"
            app:srcCompat="@drawable/ic_plus_10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/baby_counter_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/text_white"
                    android:textAppearance="@style/PassengerCounterValue"/>

                <ImageView
                    android:id="@+id/baby_count_image"
                    style="@style/PassengerCounterIcon"
                    app:srcCompat="@drawable/ic_passenger_baby"/>
            </LinearLayout>

            <TextView
                android:id="@+id/baby_counter_label"
                android:textAppearance="@style/PassengerCounterLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="до 2-х лет"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/baby_passenger_decrement_button"
            style="@style/PassengerCounterButton"
            app:srcCompat="@drawable/ic_minus_10dp"/>
    </LinearLayout>

</LinearLayout>